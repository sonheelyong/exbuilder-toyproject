<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
   <insert id="signup"
        parameterType="com.example.demo.vo.UserVo">
        INSERT INTO user_tb (user_id, user_name, user_pw) 
                      VALUES(#{user_id},#{user_name},#{user_pw})
   </insert>
   
   <select id="idcheck"
       parameterType = "String"
       resultType= "int">
      SELECT count(*) FROM user_tb WHERE user_id = #{user_id}
   </select>
   
   <select id="getuser"
       parameterType = "Map"
       resultType= "com.example.demo.vo.UserVo">
      SELECT * FROM user_tb WHERE user_id = #{id} and user_pw = #{pw}
   </select>
</mapper>